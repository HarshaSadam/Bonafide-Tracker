<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Requests</title>
</head>
<body>
  <form action="/admin/requests/closed" method="get">
    <button type="submit" value="Closed">Closed Requests</button>
  </form>
  <form action="/admin/requests/fined" method="get">
    <button type="submit" value="Closed">Fined Requests</button>
  </form>

  <h1><%= Value?"Closed Requests":"Fined Requests"%></h1>
  <h2><%= Message %></h2>
  <div class="requests-container">
    <ul >
      <% for(var l = Requests.length, i = 0; i < l; i++) { %>
        <li>
            
            <label for="rollnum">Roll Number: </label> <h5 id="rollnum"><%=Requests[i].rollno %></h5>
            <!-- <label for="name">Name: </label> <h5 id="name"><%=Requests[i].name %></h5>
            <label for="year">Year: </label> <h5 id="year"><%=Requests[i].year %></h5>
            <label for="dept">Branch: </label> <h5 id="dept"><%=Requests[i].department %></h5> -->
            <label for="purpose">Purposes: </label>   
          <% if(Value===1){ %>
          <%Requests[i].purposes.forEach((purpose)=>{%>
            <% if (purpose.isissued===Value) { %>
              
              <label for="name">Purpose Category: <h5 id="purpose"><%=purpose.purposename %></h5>
              <label for="name">Dates: <h5 id="purpose"><%=purpose.dates%></h5>
              <label for="name">Issued:<h5 id="purpose"><%=purpose.isissued %></h5>
              
            <% } %>
            
          <% }); %> 
          <% } else { %>
            <label for="name">Purpose Category: <h5 id="purpose"><%=Requests[i].purpose.purposename %></h5>
            <label for="name">Request date: <h5 id="purpose"><%=Requests[i].purpose.requestdate %></h5>
            <label for="name">Issued Date: <h5 id="purpose"><%=Requests[i].purpose.issueddate?purpose.issueddate:"Not yet issued" %></h5>
            <label for="name">Issued:<h5 id="purpose"><%=Requests[i].purpose.isissued %></h5>
            <label for="name">Ispaid:<h5 id="purpose"><%=Requests[i].purpose.paid %></h5>
            <label for="name">Amount:<h5 id="purpose"><%=Requests[i].purpose.fine %></h5>

              <form action="/admin/request/fine/paid" method="post">
                <button type="submit" name="submitbutton" value="<%=Requests[i].rollno%> <%=Requests[i].purpose.purposename%>">Mark as paid & Issue Certificate</button>
              </form>
          <% } %>
          
        </li>
      
      <% } %>
         
    </ul>
  </div>
</body>
</html>
